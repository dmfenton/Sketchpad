{
  "sandbox": {
    "enabled": true,
    "autoAllowBashIfSandboxed": true,
    "excludedCommands": ["sudo", "docker"]
  },
  "permissions": {
    "allow": [
      "Bash(make:*)",
      "Bash(cd server && uv:*)",
      "Bash(cd app && pnpm:*)",
      "Bash(cd /home/dmfenton/repos/sketchpad/server && uv:*)",
      "Bash(volta:*)",
      "Bash(git:*)",
      "Bash(gh:*)",
      "Bash(ls:*)",
      "Bash(which:*)",
      "Bash(npm:*)",
      "Bash(npx:*)",
      "Bash(node:*)",
      "Bash(python:*)",
      "Bash(pytest:*)",
      "Bash(ruff:*)",
      "Bash(uv:*)",
      "Bash(./scripts:*)",
      "WebFetch(domain:github.com)",
      "WebFetch(domain:api.github.com)",
      "WebFetch(domain:pypi.org)",
      "WebFetch(domain:registry.npmjs.org)",
      "Bash(curl:*)",
      "Bash(wget:*)",
      "Bash(rm:*)",
      "Bash(mkdir:*)",
      "Bash(chmod:*)",
      "WebSearch",
      "Bash(pkill:*)",
      "Bash(lsof:*)",
      "Bash(xargs kill:*)",
      "Bash(pnpm start --web)",
      "Bash(EXPO_DEVTOOLS_LISTEN_ADDRESS=0.0.0.0 pnpm start:*)",
      "Bash(pnpm start:*)",
      "Bash(pnpm add:*)",
      "Bash(pnpm typecheck:*)",
      "Bash(pnpm lint:*)",
      "Bash(uv run ruff:*)",
      "Bash(tail:*)",
      "Bash(nohup:*)"
    ],
    "deny": [
      "Read(.env)",
      "Read(.env.*)",
      "Read(~/.ssh/**)",
      "Read(~/.aws/**)",
      "Read(~/.azure/**)",
      "Read(**/credentials.json)"
    ]
  }
}
