# Copy this to terraform.tfvars and fill in your values
# terraform.tfvars is gitignored

aws_region       = "us-east-1"
environment      = "production"
domain_name      = "dmfenton.net"
subdomain        = "drawing-agent"
instance_type    = "t3.medium"          # t3.medium (4GB) recommended for production
ssh_key_name     = "your-key-name"      # Name of your EC2 key pair
alert_email      = "your@email.com"     # Email for CloudWatch alerts
allowed_ssh_cidr = "YOUR.IP.HERE/32"    # Your IP for SSH access (0.0.0.0/0 is blocked)
